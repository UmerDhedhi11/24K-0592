Q1:

#include <iostream>
#include <fstream>
#include <cstring>

using namespace std;

struct Student{
    int id;
    char name[50];
    float gpa;
};

int main(){
    Student s;
    ofstream outFile("students.txt", ios::out);
    if(!outFile){
        cout << "Error opening file for writing." << endl;
        return 1;
    }
    cout << "Enter data for 5 students:" << endl;
    for(int i = 0; i < 5; i++){
        cout << "\nStudent " << i + 1 << ":" << endl;
        cout << "ID: ";
        cin >> s.id;
        cin.ignore();
        cout << "Name: ";
        cin.getline(s.name, 50);
        cout << "GPA: ";
        cin >> s.gpa;
        outFile << s.id << ' ' << s.name << ' ' << s.gpa << '\n';
    }
    outFile.close();
    ofstream appendFile("students.txt", ios::app);
    if(!appendFile){
        cout << "Error opening file for appending." << endl;
        return 1;
    }
    cout << "\nEnter data for 1 additional student:" << endl;
    cout << "ID: ";
    cin >> s.id;
    cin.ignore();
    cout << "Name: ";
    cin.getline(s.name, 50);
    cout << "GPA: ";
    cin >> s.gpa;
    appendFile << s.id << ' ' << s.name << ' ' << s.gpa << '\n';
    appendFile.close();
    ifstream inFile("students.txt");
    if(!inFile){
        cout << "Error opening file for reading." << endl;
        return 1;
    }
    cout << "\nStudent Records from File:" << endl;
    while(inFile >> s.id){
        inFile.get();
        inFile.getline(s.name, 50, ' ');
        inFile >> s.gpa;
        cout << "ID: " << s.id << ", Name: " << s.name << ", GPA: " << s.gpa << endl;
    }
    inFile.close();
    return 0;
}


